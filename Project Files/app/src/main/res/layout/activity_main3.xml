<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="410dp"
        android:layout_height="648dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/box1_3"
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:text="@string/dropBox"
            android:background="@drawable/highlight"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/box1_4" />

        <TextView
            android:id="@+id/box1_1"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:text="@string/dropBox"
            android:background="@drawable/highlight"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/box1_2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/box1_4"
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:text="@string/dropBox"
            android:background="@drawable/highlight"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/box1_2"
            android:layout_width="55dp"
            android:layout_height="53dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/dropBox"
            android:background="@drawable/highlight"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/box1_3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="84dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="650dp"></LinearLayout>

    <TextView
        android:id="@+id/taskBar1"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/red_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/taskBar2"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/pink_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/taskBar3"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/orange_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/taskBar4"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/yellow_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/taskBar5"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/green_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/taskBar6"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/blue_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>